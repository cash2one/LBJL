<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

    <ImageView
        android:id="@+id/iv_hot_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/iv_hot_logo"
        android:layout_toRightOf="@+id/iv_hot_logo"
        android:text="New Text"/>

    <TextView
        android:id="@+id/tv_hot_typename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_hot_logo"
        android:layout_toRightOf="@+id/iv_hot_logo"
        android:text="New Text"/>

    <TextView
        android:id="@+id/tv_hot_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_hot_logo"
        android:layout_toEndOf="@+id/iv_hot_logo"
        android:layout_toRightOf="@+id/iv_hot_logo"
        android:text="New Text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hot_clicks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/holo_red_light"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人在玩"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>


</RelativeLayout>