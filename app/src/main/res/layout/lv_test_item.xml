<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

    <ImageView
        android:id="@+id/iv_game_test"
        android:layout_width="60dp"
        android:layout_marginRight="5dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_game_test"
        android:layout_toRightOf="@+id/iv_game_test"
        android:text="New Text"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_test_com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_game_test"
        android:layout_toRightOf="@+id/iv_game_test"
        android:text="New Text"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_game_test"
        android:layout_toEndOf="@+id/iv_game_test"
        android:layout_toRightOf="@+id/iv_game_test"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/g_biao"/>
        <TextView
            android:id="@+id/tv_test_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"/>
    </LinearLayout>


    <Button
        android:id="@+id/btn_test_check"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/mainColor"
        android:text="查看"
        android:textColor="@android:color/white"/>
</RelativeLayout>